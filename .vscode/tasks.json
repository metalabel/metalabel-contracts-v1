{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚ö°Ô∏è deploy contract",
      "type": "shell",
      "command": "yarn deploy --network ${input:network} --contract ${input:contract}",
      "problemMatcher": []
    },
    {
      "label": "ü™ê deploy full contract cluster",
      "type": "shell",
      "command": "yarn deploy:all --network ${input:network}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "network",
      "type": "pickString",
      "description": "Network name",
      "options": ["goerli", "eth"],
      "default": "goerli"
    },
    {
      "id": "contract",
      "type": "pickString",
      "description": "Contract name",
      "options": [
        "AccountRegistry",
        "NodeRegistry",
        "Collection",
        "Memberships",
        "DropEngineV2",
        "CollectionFactory",
        "MembershipsFactory",
        "RevenueModuleFactory",
        "ControllerV1",
      ],
    }
  ]
}
